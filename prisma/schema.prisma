// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuarios {
  usuarioId    Int     @id @default(autoincrement())
  email String  @unique
  nombre  String
  clave String
  telefono String
  ventas Ventas[]
}

model Ventas {
  ventasId        Int     @id @default(autoincrement())
  fecha     DateTime
  usuarioId_FK  Int
  usuario    Usuarios    @relation(fields: [usuarioId_FK], references: [usuarioId])
}
